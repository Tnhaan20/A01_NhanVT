@page
@model NhanVT_Assignment1.Pages.ManageAccount.EditModel

@{
    ViewData["Title"] = "Edit Account";
}

<h1>Edit Account</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Edit Account Information</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SystemAccount.AccountId" />

                    <div class="form-group mb-3">
                        <label asp-for="SystemAccount.AccountName" class="control-label">Full Name</label>
                        <input asp-for="SystemAccount.AccountName" class="form-control" required />
                        <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SystemAccount.AccountEmail" class="control-label">Email Address</label>
                        <input asp-for="SystemAccount.AccountEmail" class="form-control" type="email" required />
                        <span asp-validation-for="SystemAccount.AccountEmail" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SystemAccount.AccountRole" class="control-label">Role</label>
                        <select asp-for="SystemAccount.AccountRole" class="form-control" required>
                            <option value="1">Manager</option>
                            <option value="2">Staff</option>
                        </select>
                        <span asp-validation-for="SystemAccount.AccountRole" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SystemAccount.AccountPassword" class="control-label">Password</label>
                        <input asp-for="SystemAccount.AccountPassword" class="form-control" required />
                        <span asp-validation-for="SystemAccount.AccountPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                    </div>

                    @if (Model.SuccessMessage != null)
                    {
                        <div class="alert alert-success mt-3">
                            <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index" class="btn btn-outline-dark">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}